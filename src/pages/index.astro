---
import { ViewTransitions } from "astro:transitions";

const siteName = "Rebel Ape Marketing";
const pageTitle = "Ultimate Roofing Lead Generation Checklist";
const pageDesc =
  "Download the Ultimate Roofing Lead Generation Checklist and turn website visitors into booked estimates. Fix conversion leaks, rank locally, and grow consistently.";
const calendly = "https://calendly.com/rebel-ape/30-minute-consultation";
const phone = "+1 435-246-0401";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{pageTitle}</title>
    <meta name="description" content={pageDesc} />

    <!-- OG / Twitter -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDesc} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://RebelApeCDN.b-cdn.net/UOMC/featured-image.webp" />
    <meta property="og:site_name" content={siteName} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDesc} />
    <meta name="twitter:image" content="https://RebelApeCDN.b-cdn.net/UOMC/featured-image.webp" />

    <!-- Simple, framework-free styles so you can ship fast -->
    <style>
      :root { --ring: rgba(0,0,0,.06); --text:#111827; --muted:#6b7280; --border:#e5e7eb; --brand:#16a34a; --accent:#facc15; }
      * { box-sizing: border-box; }
      body { margin:0; color:var(--text); background:#fff; }
      html { scroll-behavior: smooth; }
      .container { max-width: 1200px; margin-inline: auto; padding-inline: 1.25rem; }
      .btn { display:inline-flex; align-items:center; justify-content:center; gap:.5rem; padding:.9rem 1.2rem; border-radius:1rem; border:1px solid var(--border); text-decoration:none; }
      .btn-primary { background: var(--accent); color:#111827; border-color:var(--accent); }
      .card { border:1px solid var(--border); border-radius:1.25rem; box-shadow:0 1px 2px var(--ring); background:white; }
      .grid { display:grid; gap:1.25rem; }
      @media (min-width: 768px) {
        .grid-cols-2 { grid-template-columns: 1fr 1fr; }
        .grid-cols-3 { grid-template-columns: 1fr 1fr 1fr; }
      }
      .hero {
        background: url("https://RebelApeCDN.b-cdn.net/UOMC/background-gorilla.webp") center/cover no-repeat;
      }
      .ratio { position:relative; width:100%; }
      .ratio > iframe, .ratio > img { position:absolute; inset:0; width:100%; height:100%; border:0; border-radius: .85rem; }
      .r-16x9 { padding-top: 56.25%; } /* 16:9 */
      .muted { color: var(--muted); }

      .hero-wrap { background: url("https://RebelApeCDN.b-cdn.net/UOMC/background-gorilla.webp") center/cover no-repeat; }
      .brand-section { background: var(--brand); }
      .brand-section .headline { color: #fff; text-align: center; font-weight: 800; font-size: clamp(1.4rem, 3.2vw, 2rem); margin: 1.5rem 0 1.5rem; }
      .text-white { color:#fff; }
      .bullets { list-style: none; padding-left: 0; margin: 0 0 1.1rem 0; }
      .bullets li { display:flex; align-items:flex-start; gap:.6rem; line-height:1.6; margin:.35rem 0; color:#fff; }
      .bullets .check { display:inline-flex; align-items:center; justify-content:center; width:1.15rem; height:1.15rem; border-radius:999px; background:#22c55e; color:#0a0a0a; font-weight:700; font-size:.85rem; flex:0 0 auto; }
      .hero-wrap .bullets, .hero-wrap .bullets li { text-align: left !important; }
      .hero-wrap .bullets li { display:flex; align-items:flex-start; justify-content:flex-start; }
      .btn-primary:hover { background: var(--brand); border-color: var(--brand); color: #fff; }
      .glow { box-shadow: 0 0 0 1px rgba(255,255,255,.08), 0 10px 24px rgba(0,0,0,.18); }
    </style>

    <!-- Structured data for the downloadable PDF -->
    <script type="application/ld+json">
    {
      "@context":"https://schema.org",
      "@type":"DigitalDocument",
      "name":"Ultimate Roofing Lead Generation Checklist",
      "about":"Marketing checklist for roofing companies",
      "fileFormat":"application/pdf",
      "url":"/images/ultimate-online-marketing-checklist-for-roofers.pdf",
      "publisher":{"@type":"Organization","name":"Rebel Ape Marketing"},
      "image":"https://RebelApeCDN.b-cdn.net/UOMC/featured-image.webp"
    }
    </script>

    <!-- Adobe Fonts (replace KIT_ID with your kit) -->
    <link rel="preconnect" href="https://use.typekit.net" crossorigin>
    <link rel="stylesheet" href="https://use.typekit.net/KIT_ID.css">
    <style>
      body, button, input, textarea { font-family: "proxima-nova", "aktiv-grotesk", system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Noto Sans", "Liberation Sans", sans-serif; }
    </style>
  </head>

  <body>
    <ViewTransitions />

    <!-- HERO WRAP (shared background for logo + hero content) -->
